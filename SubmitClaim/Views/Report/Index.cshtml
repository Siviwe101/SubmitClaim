@{
    ViewData["Title"] = "Report";
}

<h2>Approved Claims Report</h2>

@if (ViewBag.PdfBase64 != null)
{
    <iframe 
        src="data:application/pdf;base64,@ViewBag.PdfBase64" 
        width="100%" 
        height="600px"
        style="border: none;">
    </iframe>
}
else
{
    <p>No report generated yet. Click "Generate Report" to view the PDF.</p>
}

<form asp-action="GeneratePdfReport" method="post">
    <button type="submit" class="btn btn-primary">Generate Report</button>
</form>